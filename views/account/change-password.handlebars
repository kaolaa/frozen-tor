{{> _header}} {{> _banner}}
<!-- BLOG -->
<div class="detail-wrapper">
  <div class="container">
    <div class="row padd-90">
      <div class="col-xs-12 col-md-8 col-md-push-4">
        <div class="account">
          <div class="account-header">
            <h2 class="account-title">
              Modifier votre mot de passe
            </h2>
          </div>
          {{> _msg}} {{> _errors}}
          <form class="f-login-form" method="POST" action="/account/change-password?_method=put">
            <div class="row">
              <div class="box col-md-12 ">
                <input value="put" name="_method " type="hidden">
                <div class="form-group">
                  <label class="color-grey-8">Mot de passe actuel</label>
                  <div class="input-style-1 b-50 type-2 color-2">
                    <input value="" name="currentpassword" required="" type="text">
                  </div>
                </div>
                <div class="form-group">
                  <label class="color-grey-8">Nouveau mot de passe</label>
                  <div class="input-style-1 b-50 type-2 color-2">
                    <input value="" name="newpassword" required="" type="text">
                  </div>
                </div>
                <div class="form-group">
                  <label class="color-grey-8">Répéter le nouveau mot de passe</label>
                  <div class="input-style-1 b-50 type-2 color-2">
                    <input value="" name="password2" required="" type="text">
                  </div>
                </div>

                <div class="row">

                  <div class="col-md-6">
                    <a href="/account/overview" class="c-button b-20 full color-blue-2 brd-grey hv-blue-2">
                      <span>Annuler</span>
                    </a>
                  </div>
                  <div class="col-md-6">
                    <input type="submit" class=" c-button full b-20 bg-dr-blue-2 hv-dr-blue-2-o" value="Définir un nouveau mot de passe">
                  </div>
                </div>

              </div>
            </div>
          </form>
        </div>
      </div>

      {{> _sidebar}}

    </div>
  </div>
</div>

